<div class="contact-form-container">
  <form id="contact-form">
    <div class='form-field'>
      <label><h3>Name</h3></label>
      <input id='name' name='name' type='text' placeholder="Your Name">
    </div>
    <div class='form-field'>
      <label><h3>Email Address</h3></label>
      <input id='email' name='email' type='email' placeholder="First & Last Name">
    </div>
    <div class='form-field'>
      <label><h3>Phone Number</h3></label>
      <input id='phone' name='phone' type='tel' placeholder="hi@email.com">
    </div>
    <div class='form-field'>
      <label><h3>Message</h3></label>
      <textarea id='message' name='message' rows='5' placeholder="Got a project? I'm down! Tell me more :-)"></textarea>
    </div>
    <div id='success'></div>
    <button type='submit'>Send</button>
  </form>


</div>

